#include <iostream>
#include <fstream>
#include <string>
#include <map>
#include <sstream>
using namespace std;

map<string, string> loadUsers() {
    map<string, string> users;
    ifstream file("users.txt");
    string line, username, password;

    while (getline(file, line)) {
        stringstream ss(line);
        getline(ss, username, ',');
        getline(ss, password);
        users[username] = password;
    }
    file.close();
    return users;
}

bool isStrongPassword(string password) {
    return password.length() >= 6;
}

void registerUser() {
    string username, password;
    map<string, string> users = loadUsers();

    cout << "Enter username: ";
    cin >> username;

    if (users.find(username) != users.end()) {
        cout << "âŒ Username already exists. Try a different one.\n";
        return;
    }

    cout << "Enter password (min 6 chars): ";
    cin >> password;

    if (!isStrongPassword(password)) {
        cout << "âŒ Weak password. Try again.\n";
        return;
    }

    ofstream file("users.txt", ios::app);
    file << username << "," << password << endl;
    file.close();

    cout << "âœ… Registration successful!\n";
}

void loginUser() {
    string username, password;
    map<string, string> users = loadUsers();

    cout << "Enter username: ";
    cin >> username;
    cout << "Enter password: ";
    cin >> password;

    if (users.find(username) != users.end()) {
        if (users[username] == password) {
            cout << "âœ… Login successful! Welcome, " << username << "!\n";
        } else {
            cout << "âŒ Incorrect password.\n";
        }
    } else {
        cout << "âŒ Username not found. Please register first.\n";
    }
}

int main() {
    int choice;
    do {
        cout << "\n====== Login & Registration Menu ======\n";
        cout << "1. Register\n";
        cout << "2. Login\n";
        cout << "3. Exit\n";
        cout << "Enter choice: ";
        cin >> choice;

        switch (choice) {
        case 1:
            registerUser();
            break;
        case 2:
            loginUser();
            break;
        case 3:
            cout << "ðŸ”’ Exiting the system. Goodbye!\n";
            break;
        default:
            cout << "âš ï¸ Invalid choice. Try again.\n";
        }
    } while (choice != 3);

    return 0;
}
